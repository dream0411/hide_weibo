{
	"name": "Hide Personal info on Weibo",
	"version": "1.0",
	"permissions": [
		"activeTab",
		"http://weibo.com/*"
	],

	"background": {
		"scripts": ["background.js"],
		"persistent": false
	},
	"browser_action": {
		"default_title": "Hide your persional info on Weibo",
		"default_icon": {
			"19": "icon.png",
			"38": "icon.png"
		}
	},
	"manifest_version": 2
}
